---

<WikiLayout title="Ranking System" activeTab="ranking">
  <section class="ranking-section">
    <h2>High Rankers (Top 100)</h2>
    <div class="table-container">
      <table>
        <thead>
          <tr>
            <th>Rank</th>
            <th>Name</th>
            <th>Title</th>
            <th>Status</th>
            <th>Affiliation</th>
            <th>Special Notes</th>
          </tr>
        </thead>
        <tbody>
          {rankings.highRankers.map(ranker => (
            <tr>
              <td>{ranker.rank}</td>
              <td>{ranker.name}</td>
              <td>{ranker.title}</td>
              <td>
                <span class={`status ${ranker.status.toLowerCase()}`}>
                  {ranker.status}
                </span>
              </td>
              <td>{ranker.affiliation}</td>
              <td class="notes">{ranker.specialNotes}</td>
            </tr>
          ))}
        </tbody>
      </table>
    </div>
  </section>

  <section class="ranking-section">
    <h2>Advanced Rankers</h2>
    <div class="table-container">
      <table>
        <thead>
          <tr>
            <th>Name</th>
            <th>Title</th>
            <th>Status</th>
            <th>Affiliation</th>
            <th>Special Notes</th>
          </tr>
        </thead>
        <tbody>
          {rankings.advancedRankers.map(ranker => (
            <tr>
              <td>{ranker.name}</td>
              <td>{ranker.title}</td>
              <td>
                <span class={`status ${ranker.status.toLowerCase()}`}>
                  {ranker.status}
                </span>
              </td>
              <td>{ranker.affiliation}</td>
              <td class="notes">{ranker.specialNotes}</td>
            </tr>
          ))}
        </tbody>
      </table>
    </div>
  </section>

  <section class="ranking-section">
    <h2>Combat Positions</h2>
    <div class="positions-grid">
      {positions.map(position => (
        <div class="position-card">
          <h3>{position.name}</h3>
          <p>{position.description}</p>
        </div>
      ))}
    </div>
  </section>
</WikiLayout>

<style>
  .ranking-section {
    margin-bottom: 3rem;
  }

  .table-container {
    overflow-x: auto;
    background: rgba(var(--accent-dark), 0.2);
    border-radius: 8px;
    padding: 1rem;
  }

  table {
    width: 100%;
    border-collapse: collapse;
  }

  th, td {
    padding: 1rem;
    text-align: left;
    border-bottom: 1px solid rgba(var(--accent-light), 0.1);
  }

  th {
    color: rgb(var(--accent-light));
    font-weight: 600;
  }

  .status {
    padding: 0.25rem 0.75rem;
    border-radius: 4px;
    font-size: 0.9rem;
  }

  .status.active {
    background: rgba(0, 255, 0, 0.2);
  }

  .status.inactive {
    background: rgba(255, 0, 0, 0.2);
  }

  .status.unknown {
    background: rgba(128, 128, 128, 0.2);
  }

  .notes {
    font-size: 0.9rem;
    max-width: 300px;
  }

  .positions-grid {
    display: grid;
    gap: 1rem;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  }

  .position-card {
    background: rgba(var(--accent-dark), 0.2);
    padding: 1.5rem;
    border-radius: 8px;
  }

  .position-card h3 {
    color: rgb(var(--accent-light));
    margin: 0 0 0.5rem 0;
  }
</style>